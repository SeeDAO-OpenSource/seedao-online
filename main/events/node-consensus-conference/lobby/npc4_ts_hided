import { RpgEvent, EventData, Components, RpgPlayer } from '@rpgjs/server'
import { OPEN_WEB_PAGE } from '../../../consts/events'


@EventData({
    name: 'NPC-1-4',
    hitbox: {
        width: 32,
        height: 32
    }
})

export default class NCCLobbyNPC4Event extends RpgEvent {
    onInit() {
        this.setGraphic('character_8_frame16x20')
        this.setComponentsTop(Components.text('Â•≥Â∑´', {
            fill: '#ffffff',
            fontSize: 12,
            fontFamily: 'Arial',
            stroke: '#000000',
        }), {
            marginRight: 0,
        })
    }

    async onAction(player: RpgPlayer) {
        await player.showText('üåê ÊµèËßà SeeDAO OS...', {
            talkWith: this
        })
        player.emit(OPEN_WEB_PAGE, { url: 'https://app.seedao.xyz' })
    }
}